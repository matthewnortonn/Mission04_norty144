@{
}

@model GradeCalculatorModel;


<!-- inputs for the calculator -->
<h2>Grade Calculator</h2>
<form method="post">
    <label>Assignments Percentage:</label>
    <input id="assignmentsIN" asp-for="assignments" /><br /><br />

    <label>Group Project Percentage:</label>
    <input id="groupIN" asp-for="group" /><br /><br />

    <label>Quizzes Percentage:</label>
    <input id="quizIN" asp-for="quiz" /><br /><br />

    <label>Midterm Exam Percentage:</label>
    <input id="midtermIN" asp-for="midterm"/><br /><br />

    <label>Final Exam Percentage:</label>
    <input id="finalIN" asp-for="final"/><br /><br />

    <label>Intex Percentage:</label>
    <input id="intexIN" asp-for="intex"/><br /><br />

    
    <input id="submit" type="submit" value="Calculate Grade" />

    <!-- final grade output -->
    <p id="gradeP"></p>
    <br />
    <br />

    <!--validation for the inputs from the user -->
    <div asp-validation-summary="All"></div>

</form>



<script src="~/js/GradeCalc.js"></script>
